package com.company;
public class Circle {
    private double radius;

    public Circle() {
        radius = 2.0;
    }
    //конструкторы лего
    public Circle(double r) {
        radius = r;
    }

    public double getRadius() {
        return radius;
    }
    // методы
    public double getLength() {
        return 2*Math.PI*radius;
    }
    // да да я
    public double getArea() {
        return radius*radius*Math.PI;
    }
    public static void main(String[] args) {
     Circle denis = new Circle ();
        System.out.println("Радиус = " + denis.getRadius()
                        + " Длина = " + denis.getLength()
                        + " Площадь = " + denis.getArea());
        Circle denis2 = new Circle (3.0);
        System.out.println("Радиус = " + denis2.getRadius()
                         + " Длина = " + denis2.getLength()
                         + " Площадь = " + denis2.getArea());
    }
}
